<section>
    <h1><%= @recipe.name %></h1>
    <div class="showContainer">
    <div>
        <p><%= @recipe.preparation_time %></p>
        <p><%= @recipe.cooking_time %></p>
        <p>"Steps go here..."</p>
        <%= link_to "Generate shopping list", user_recipes_path %>
    </div>

    <div>
        <p>"Public"</p>
        <%= link_to "Add ingredient", new_food_path, class: "ingredientButton" %>
    </div>
</div>
<article class="ps-5 pe-5">
    <div class="bg-light d-flex flex-row-reverse">
    </div>
    
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Food</th>
          <th scope="col">Measurement unity</th>
          <th scope="col">Price</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% count = 0 %>
        <% @recipe.foods.each  do |item| %>
            <tr>
            <th scope="row"><%= count = count + 1 %></th>
            <td><%= item.name %></td>
            <td><%= item.measurement_unit %></td>
            <td><b>$ </b><%= item.price %></td>
            <td><%= button_to "Delete", food_path(item), method: :delete, class: "btn btn-link" %></td>
            </tr>
        <% end %>
    
        
      </tbody>
    </table>
    </section>

<%= link_to "All recipes", user_recipes_path %>

</section>