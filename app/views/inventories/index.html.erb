<% if @inventories.empty? %>
	<h2> Your list of inventories is empty! </h2>

	<%= link_to 'Add new inventory', new_user_inventory_path, class: 'btn btn-primary' %>
<% else %>
	<h2> Your inventories list: </h2>
	<% @inventories.each do |inventory| %>
		<%= link_to inventory.name, user_inventory_path(inventory.user, inventory.id), class: 'inventory-heading'%>
		<%= button_to 'Delete', user_inventory_path(inventory.user, inventory), method: :delete, class: 'btn btn-danger' %>
	<% end %>
<% end %>